<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplicacionDeGestionDeResiduos"
        tools:targetApi="31">

        <!-- MainActivity: la actividad principal de la aplicación -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AplicacionDeGestionDeResiduos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CalendarActivity: actividad para el calendario -->
        <activity
            android:name=".CalendarActivity"
            android:exported="false"
            android:label="@string/title_activity_calendar"
            android:theme="@style/Theme.AplicacionDeGestionDeResiduos" />

        <!-- StatisticsActivity: actividad para las estadísticas -->
        <activity
            android:name=".StatisticsActivity"
            android:exported="false"
            android:label="@string/title_activity_statistics"
            android:theme="@style/Theme.AplicacionDeGestionDeResiduos" />

        <!-- Otras actividades que se necesiten pueden ser añadidas aquí -->

        <meta-data
            android:name="com.mapbox.token"
            android:value="TU_TOKEN_DE_ACCESO_AQUI"/>
    </application>

</manifest>
